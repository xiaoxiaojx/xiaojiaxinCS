{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES6",
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": false,
		"sourceMap": false,
//	    "strictNullChecks": true,
		"experimentalDecorators": true,
		"baseUrl": "./",
		"noUnusedLocals": true,
        "checkJs": true,
        "lib":[
            "es5",
            "es6",
            "es2015",
            "es2016",
            "es7"
        ]
    },
    "types": [
        "node"
    ],
    "include": [
        "./src/**/*.ts",
        "./src/app.ts",
        "./*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
