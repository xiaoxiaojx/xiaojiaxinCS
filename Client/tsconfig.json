{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es5",
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"jsx": "react",
		"noImplicitAny": false,
		"sourceMap": true,
	    "strictNullChecks": true,
		"experimentalDecorators": true,
		"baseUrl": "./",
		"noUnusedLocals": true,
        "checkJs": true,
        "lib":[
            "dom",
            "es5",
            "es6",
            "ES2015",
            "es7"
        ]
    },
    "types": [
        "react",
        "react-dom",
        "node"
    ],
    "include": [
        "./**/*.ts",
        "./**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}
